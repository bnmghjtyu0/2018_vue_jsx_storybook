body
  font-family 'LiHei Pro', "微軟正黑體", "Microsoft JhengHei"	

html, body, #app, .view
  width 100%
  height 100%

#app
  display flex
  flex-direction column
  main
    flex 1 

.standard-vue
.jsx-component
  position relative
  padding 30px
  border 2px solid black
  &:before
    display block
    top 1px
    left 2px
    font-size 24px
    padding-bottom 20px

.standard-vue
  &:before
    content 'vue'
.jsx-component
  background-color #ecf0f1
  &:before
    content 'jsx'

.markdown
  padding-top 20px

.kv-text
  h1
    font-size 80px

pre
  font-size 120% !important